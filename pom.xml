<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>cn.chiayhon.dependencies</groupId>
  <artifactId>dependencies-parent</artifactId>
  <version>1.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>dependencies-parent</name>

  <properties>
    <!-- 二方包版本 -->
    <framework.version>1.1.0-SNAPSHOT</framework.version>

    <!-- 三方包版本 -->
    <!-- spring boot 版本-->
    <springboot.version>2.3.12.RELEASE</springboot.version>
    <!-- mybatis starter 版本 -->
    <mybatis.starter.version>2.1.4</mybatis.starter.version>
    <!-- mybatis-plus starter 版本 -->
    <mybatis.plus.starter.version>3.5.3.2</mybatis.plus.starter.version>
    <!-- 数据库:h2 -->
    <h2.version>1.4.200</h2.version>
    <!-- 数据库:mysql -->
    <mysql.version>8.0.32</mysql.version>
    <!-- 测试框架 -->

    <!-- 其他 -->
    <lombok.version>1.18.26</lombok.version>
  </properties>

  <!-- 设置Maven仓库 -->
  <profiles>
    <!-- 开发环境 -->
    <profile>
      <id>aliops-dev</id>
      <!-- 默认激活 -->
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <!-- 自定义属性 -->
      <properties>
        <profile.active>develop</profile.active>
      </properties>
      <!-- 部署仓库配置：构件分发 -->
      <distributionManagement>
        <!-- release 仓库 -->
        <repository>
          <id>aliops-dev-releases</id>
          <name>Releases Repository</name>
          <url>https://packages.aliyun.com/maven/repository/2417162-release-iNZDTy</url>
        </repository>
        <!-- snapshot 仓库 -->
        <snapshotRepository>
          <id>aliops-dev-snapshots</id>
          <name>Snapshots Repository</name>
          <url>https://packages.aliyun.com/maven/repository/2417162-snapshot-AjHYmz</url>
          <!-- 构件可重复 -->
          <uniqueVersion>true</uniqueVersion>
        </snapshotRepository>
      </distributionManagement>
      <!-- 拉取仓库配置 -->
      <repositories>
        <!-- 阿里公库 -->
        <repository>
          <id>public</id>
          <url>https://maven.aliyun.com/nexus/content/groups/public</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
        <!-- 阿里云效开发环境releases库 -->
        <repository>
          <id>aliops-dev-releases</id>
          <url>https://packages.aliyun.com/maven/repository/2417162-release-iNZDTy/</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <!-- 阿里云效开发环境snapshots库 -->
        <repository>
          <id>aliops-dev-snapshots</id>
          <url>https://packages.aliyun.com/maven/repository/2417162-snapshot-AjHYmz/</url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
    </profile>
  </profiles>

</project>
